// User-level watchlist (personal)
model Watchlist {
  id        String   @id @default(cuid())
  userId    String
  symbol    String
  addedAt   DateTime @default(now())
  notes     String?  @db.Text // Why you're watching this
  
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  @@unique([userId, symbol])
  @@index([userId])
  @@index([symbol])
}

// Workspace-level watchlist (shared)
model WorkspaceWatchlist {
  id          String    @id @default(cuid())
  workspaceId String
  symbol      String
  addedBy     String    // userId who added it
  addedAt     DateTime  @default(now())
  notes       String?   @db.Text // Thesis, why squad is watching
  
  workspace   Workspace @relation(fields: [workspaceId], references: [id], onDelete: Cascade)
  addedByUser User      @relation(fields: [addedBy], references: [id])
  
  @@unique([workspaceId, symbol])
  @@index([workspaceId])
  @@index([symbol])
  @@index([addedBy])
}

